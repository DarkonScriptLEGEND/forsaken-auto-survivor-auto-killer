-- Darkon Mega Boost Script üî•

local Players = game:GetService("Players")
local ReplicatedStorage = game:GetService("ReplicatedStorage")
local Debris = game:GetService("Debris")

local player = Players.LocalPlayer
local keywords = {"anti", "cheat", "hack"}
local forsakenPlaceId = INSERT_FORSAKEN_PLACEID_HERE  -- replace this with the actual number!

-- 1Ô∏è‚É£ Setup RemoteEvent for FE gun
local remoteName = "Darkon_GiveFEGun"
if not ReplicatedStorage:FindFirstChild(remoteName) then
    Instance.new("RemoteEvent", ReplicatedStorage).Name = remoteName
end

-- 2Ô∏è‚É£ Sound section
local function playZoneMusic()
    local sound = Instance.new("Sound")
    sound.Name = "DarkonZoneMusic"
    sound.Looped = true
    sound.SoundId = "rbxassetid://" ..
        (game.PlaceId == forsakenPlaceId and "1171745634977" or "18841893567")
    sound.Volume = 1
    sound.Parent = player:WaitForChild("PlayerGui")
    sound:Play()
end

-- 3Ô∏è‚É£ GUI helpers
local function showMessage(text, color)
    local gui = Instance.new("ScreenGui", player.PlayerGui)
    local lbl = Instance.new("TextLabel", gui)
    gui.Name = "DarkonMsgGUI"
    lbl.Size = UDim2.new(0, 300, 0, 50)
    lbl.Position = UDim2.new(0.5, -150, 0.1, 0)
    lbl.BackgroundTransparency = 0.3
    lbl.BackgroundColor3 = color
    lbl.TextColor3 = Color3.new(1,1,1)
    lbl.Font, lbl.TextSize = Enum.Font.SourceSansBold, 24
    lbl.Text = text
    task.delay(5, function() gui:Destroy() end)
end

local function showDeletedList(list)
    local gui = Instance.new("ScreenGui", player.PlayerGui)
    gui.Name = "DarkonDelList"
    local f = Instance.new("Frame", gui)
    f.Size, f.Position = UDim2.new(0,250,0,300), UDim2.new(0,10,0.3,0)
    f.BackgroundTransparency, f.BackgroundColor3 = 0.3, Color3.fromRGB(20,20,20)
    for i,name in ipairs(list) do
        local lbl = Instance.new("TextLabel", f)
        lbl.Size = UDim2.new(1,-10,0,20)
        lbl.Position = UDim2.new(0,5,0,30 + (i-1)*20)
        lbl.BackgroundTransparency = 1
        lbl.TextColor3 = Color3.new(1,1,1)
        lbl.Font, lbl.TextSize = Enum.Font.SourceSans, 16
        lbl.Text, lbl.TextXAlignment = "- " .. name, Enum.TextXAlignment.Left
    end
    task.delay(30, function() gui:Destroy() end)
end

-- 4Ô∏è‚É£ Remove anti-cheat scripts
local function removeAntiCheat()
    local remList = {}
    for _,o in ipairs(game:GetDescendants()) do
        if (o:IsA("Script") or o:IsA("LocalScript") or o:IsA("ModuleScript")) then
            local name = o.Name:lower()
            for _,k in ipairs(keywords) do
                if name:find(k) then
                    remList[#remList+1] = o:GetFullName()
                    pcall(function() o:Destroy() end)
                    break
                end
            end
        end
    end
    if #remList > 0 then
        showMessage("‚úÖ Removed anti cheat", Color3.fromRGB(0,200,0))
        showDeletedList(remList)
    end
end

-- 5Ô∏è‚É£ FE gun receive + shooting
local function giveGun()
    task.wait(1)
    if not player.Backpack:FindFirstChild("DarkonAK47") then
        ReplicatedStorage[remoteName]:FireServer()
    end
end

local function setupShoot()
    local gun = player.Backpack:WaitForChild("DarkonAK47", 5)
    if not gun then return end
    local handle = gun:WaitForChild("Handle",5)
    local snd = handle:WaitForChild("FireSound",5)
    local mouse = player:GetMouse()
    local cooldown = false
    gun.Equipped:Connect(function()
        mouse.Button1Down:Connect(function()
            if cooldown then return end
            cooldown = true
            snd:Play()
            -- visual beam
            local origin = handle.Position
            local dir = (mouse.Hit.p - origin).Unit * 300
            local ray = Ray.new(origin, dir)
            local hit, pos = workspace:FindPartOnRay(ray, player.Character)
            local beam = Instance.new("Part", workspace)
            beam.Anchored, beam.CanCollide = true, false
            beam.Size = Vector3.new(0.2,0.2,(origin-pos).Magnitude)
            beam.CFrame = CFrame.new(origin,pos) * CFrame.new(0,0,-beam.Size.Z/2)
            beam.Material, beam.BrickColor = Enum.Material.Neon, BrickColor.new("Bright yellow")
            Debris:AddItem(beam,0.15)
            if hit and hit.Parent then
                local hum = hit.Parent:FindFirstChildOfClass("Humanoid")
                if hum then hum.Health = hum.Health - 25 end
            end
            task.delay(0.12, function() cooldown = false end)
        end)
    end)
end

-- 6Ô∏è‚É£ WalkSpeed adjust
local function maintainSpeed()
    if player.Character and player.Character:FindFirstChild("Humanoid") then
        player.Character.Humanoid.WalkSpeed = 45
    end
end

-- 7Ô∏è‚É£ On respawn setups
player.CharacterAdded:Connect(function(char)
    for i=1,10 do task.wait(0.2); maintainSpeed() end
    giveGun()
    setupShoot()
end)

-- 8Ô∏è‚É£ SERVER: inject gun tool (if executor supports)
if game:GetService("RunService"):IsServer() then
    local remote = ReplicatedStorage[remoteName]
    remote.OnServerEvent:Connect(function(plr)
        if plr.Backpack:FindFirstChild("DarkonAK47") then return end
        local tool = Instance.new("Tool")
        tool.Name, tool.RequiresHandle, tool.CanBeDropped = "DarkonAK47", true, false
        local handle = Instance.new("Part", tool)
        handle.Name, handle.Size, handle.BrickColor = "Handle", Vector3.new(1,1,3), BrickColor.new("Really black")
        local sound = Instance.new("Sound", handle)
        sound.Name, sound.SoundId, sound.Volume = "FireSound", "rbxassetid://12222242", 1
        tool.Parent = plr.Backpack
    end)
end

-- 9Ô∏è‚É£ Initial boot
playZoneMusic()
removeAntiCheat()
maintainSpeed()
giveGun()
setupShoot()
while true do task.wait(15); removeAntiCheat(); maintainSpeed() end
